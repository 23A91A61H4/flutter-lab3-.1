import 'package:flutter/material.dart';

void main() => runApp(MaterialApp(
      home: Scaffold(
        appBar: AppBar(title: const Text('Layout Example')),
        body: Center(
          child: Container(
            width: 300,
            height: 300,
            color: Colors.blue[50],
            padding: const EdgeInsets.all(10),
            child: Column(
              crossAxisAlignment: CrossAxisAlignment.start,
              children: [
                const Text('Column Layout', style: TextStyle(fontSize: 16)),
                const SizedBox(height: 10),
                Row(
                  children: const [
                    Icon(Icons.star, color: Colors.orange),
                    SizedBox(width: 8),
                    Text('Row Layout'),
                  ],
                ),
                const SizedBox(height: 20),
                Container(
                  width: 120,
                  height: 120,
                  color: Colors.grey[300],
                  child: Stack(
                    children: [
                      Container(width: 100, height: 100, color: Colors.pink),
                      Positioned(
                        left: 20,
                        top: 20,
                        child: Container(
                          width: 60,
                          height: 60,
                          color: Colors.purple,
                          child: const Icon(Icons.favorite,
                              color: Colors.white),
                        ), ), ], ), ), ], ), ), ), ), ));
